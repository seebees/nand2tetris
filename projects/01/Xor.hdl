/**
 *  Exclusive-or gate: out = !(a == b).
 */

CHIP Xor {

    IN a, b;
    OUT out;

    PARTS:
    Not(in=a,             out=nota);
    Not(in=b,             out=notb);
    Nand(a=a,     b=notb, out=a2);
    Nand(a=nota,  b=b,    out=b1);
    Nand(a=a1,    b=b2,   out=out);
}
